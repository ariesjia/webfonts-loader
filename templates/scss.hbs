@if not variable-exists('webfont-icons') {
  $webfont-icons: () !global;
}

$webfont-family: "{{fontName}}";

$webfont-icons: map-merge($webfont-icons, (
  {{#each codepoints}}
    '{{@key}}': ('\{{this}}'),
  {{/each}}
));

@mixin webfont-icon($name) {
  font-family: $webfont-family;
  content: map-get($webfont-icons, $name);
}
